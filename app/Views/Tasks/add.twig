        Welcome {{ session.id }}
        <a href='/logout'>Logout</a><br>

    {% else %}

        Welcome, guest!
        <a href='/login'>Login</a><br>

    {% endif %}
{% endblock %}
{% block content %}

    <div id="addDelete">

